<div class="container">
  <div class="col-md-4">
  <%= form_for @attendee, role: 'form' do |f| %>
    <div class "form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :home_town %>
      <%= f.text_field :home_town, class: 'form-control' %>
    </div>

      <% f.hidden_field_tag :tournament_id, :value => params[:tournament_id] %>

      <%= f.submit 'Create Attendee' %>

  <% end %>
  </div>
</div>