<h3>Add a Rookie</h3>

<div class="container">
  <div class="col-md-4">
  <%= form_for [@tournament, @attendee], role: 'form' do |f| %>
    <div class "form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class "form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :home_town %>
      <%= f.text_field :home_town, class: 'form-control' %>
    </div>

      <%= f.submit 'Add Rookie to Tournament' %>

  <% end %>
  </div>
</div>

