<h1><%= @tournament.name %></h1>
<h2><%= @tournament.start_date %> - <%= @tournament.end_date %> </h2>
<h2><%= @tournament.host %></h2>
<h3><%= @tournament.location %></h3>

<table>
<tr>
  <th>Attendee</th>
  <th>Home Town</th>
  <th colspan="2">Day 1</th>
  <th colspan="2">Day 2</th>
  <th colspan="2">Day 3</th>
</tr>
</table>

<%= link_to 'Add Attendee', "/attendees/#{@tournament.id}/new" %>
<%= link_to 'Edit tournament', "/tournaments/#{@tournament.id}/edit" %>
<%= link_to 'Delete this tournament', "/tournaments/#{@tournament.id}", method: :delete %>